<% layout("/layouts/boilerplate") %>

<body>
    <div class="bg-animation"></div>

   

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">Build. Collaborate. Get Paid.</h1>
                <h2 class="hero-title" style="font-size: 3rem; margin-top: -1rem;">Welcome to Workly.</h2>
                <p class="hero-subtitle">AI-backed freelancing built for devs and innovators.</p>
                
                <div class="cta-buttons">
                    <a href="#" class="btn-primary" id="loginBtn">Start Hiring</a>
                    <a href="#" class="btn-secondary" id="loginBtn">Join as Freelancer</a>
                </div>
            </div>
            
            <div class="hero-visual">
                <div class="terminal-window">
                    <div class="terminal-header">
                        <div class="terminal-dot dot-red"></div>
                        <div class="terminal-dot dot-yellow"></div>
                        <div class="terminal-dot dot-green"></div>
                    </div>
                    <div class="terminal-content">
                        <div class="terminal-line">
                            <span class="prompt">workly@dev:~$ </span>
                            <span class="command">npm start project</span>
                        </div>
                        <div class="terminal-line output">
                            > Connecting to AI-powered matching...
                        </div>
                        <div class="terminal-line success">
                            âœ“ Found 47 qualified developers
                        </div>
                        <div class="terminal-line success">
                            âœ“ Project summarized for client
                        </div>
                        <div class="terminal-line">
                            <span class="prompt">workly@dev:~$ </span>
                            <span class="command">git commit -m "deployed"</span>
                        </div>
                        <div class="terminal-line success">
                            âœ“ Auto-explanation generated
                        </div>
                        <div class="terminal-line success">
                            âœ“ Payment processed securely
                        </div>
                        <div class="terminal-line">
                            <span class="prompt">workly@dev:~$ </span>
                            <span class="command" style="animation: blink 1s infinite;">_</span>
                        </div>
                    </div>
                </div>
                
                <div class="floating-elements">
                    <div class="floating-card floating-card-1">
                        <div style="color: var(--primary-green); font-weight: 600;">ðŸš€ Real-time Updates</div>
                        <div style="font-size: 0.8rem; color: var(--light-gray);">Node.js + MongoDB</div>
                    </div>
                    
                    
                </div>
            </div>
        </div>

     <!-- login model      -->
     <div class="modal-overlay" id="loginModalOverlay">
        <div class="modal" id="loginModal">
            <div class="modal-header">
                <button class="close-btn" id="loginCloseBtn">&times;</button>
                <h2 class="modal-title">Sign In</h2>
                <p class="modal-subtitle">Welcome back to Workly</p>
            </div>
            <div class="modal-body">
                <a href="/auth/google" class="google-btn">
                    <svg class="google-icon" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Continue with Google
                </a>
                
                <div class="divider">
                    <span>or</span>
                </div>
                
                <form id="loginForm" action="/login" method="post">
                    <div class="form-group">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" class="form-input" name="username" id="loginEmail" placeholder="Enter your username" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="loginPassword">Password</label>
                        <input type="password" name="password" class="form-input" id="loginPassword" placeholder="Enter your password" required>
                        <div class="error-message" id="loginPasswordError"></div>
                        <div class="forgot-password">
                            <a href="#" id="forgotPasswordLink">Forgot password?</a>
                        </div>
                    </div>
                    <button type="submit" class="submit-btn" id="loginSubmitBtn">Sign In</button>
                </form>
                <div class="form-footer">
                    <p>New to Workly? <a id="switchToSignup">Create account</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Signup Modal -->
    <div class="modal-overlay" id="signupModalOverlay">
        <div class="modal" id="signupModal">
            <div class="modal-header">
                <button class="close-btn" id="signupCloseBtn">&times;</button>
                <h2 class="modal-title">Create Account</h2>
                <p class="modal-subtitle">Join the Workly community</p>
            </div>
            <div class="modal-body">
                <a href="/auth/google" class="google-btn">
                    <svg class="google-icon" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Continue with Google
                </a>
                
                <div class="divider">
                    <span>or</span>
                </div>
                
                <div class="verification-notice">
                    ðŸ“§ You'll need to verify your email before you can log in
                </div>
                
                <form id="signupForm" action="/signup" method="post">
                    <div class="form-group">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" class="form-input" name="username" id="signupName" placeholder="Choose a username" required>
                        <div class="error-message" id="signupNameError"></div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="email">Email</label>
                        <input type="email" class="form-input" name="email" id="signupEmail" placeholder="Enter your email" required>
                        <div class="error-message" id="signupEmailError"></div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" class="form-input" name="password" id="signupPassword" placeholder="Create password (6+ characters)" required>
                        <div class="error-message" id="signupPasswordError"></div>
                    </div>
                    <button type="submit" class="submit-btn" id="signupSubmitBtn">Create Account</button>
                </form>
                <div class="form-footer">
                    <p>Already have an account? <a id="switchToLogin">Sign in</a></p>
                </div>
            </div>
        </div>
    </div>
    
    </section>

    <!-- Why Choose Workly Section -->
    <section class="why-workly">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">Why Choose Workly?</h2>
                <p class="section-subtitle">Experience the future of freelancing with our AI-powered platform designed by student developers who understand what modern tech teams need.</p>
            </div>
            
            <div class="features-grid">
                <div class="feature-card">
                    <i class="fas fa-robot feature-icon"></i>
                    <h3 class="feature-title">AI-Powered Work Summaries</h3>
                    <p class="feature-desc">Our advanced AI automatically <span class="tech-highlight">summarizes work delivered</span> and generates plain-English updates for admins and clients. No more confusion about project progress - get clear, automated reports that everyone can understand.</p>
                </div>
                
                <div class="feature-card">
                    <i class="fas fa-code-branch feature-icon"></i>
                    <h3 class="feature-title">Automatic Code Transparency</h3>
                    <p class="feature-desc">Every <span class="tech-highlight">git commit gets automatic explanations</span> in plain language. Build trust and transparency with clients who can understand exactly what was changed, when, and why - without needing technical knowledge.</p>
                </div>
                
                
                
                <div class="feature-card">
                    <i class="fas fa-bolt feature-icon"></i>
                    <h3 class="feature-title">Modern Tech Stack</h3>
                    <p class="feature-desc">Built on a cutting-edge <span class="tech-highlight">Node.js + MongoDB + Express.js</span> stack with real-time updates and seamless performance. Experience lightning-fast load times and instant notifications.</p>
                </div>
                
                <div class="feature-card">
                    <i class="fas fa-shield-alt feature-icon"></i>
                    <h3 class="feature-title">Trust & Security First</h3>
                    <p class="feature-desc">Advanced security measures protect your projects and payments. With automatic code commit tracking and <span class="tech-highlight">end-to-end transparency</span>, you always know where your project stands.</p>
                </div>
                
                <div class="feature-card">
                    <i class="fas fa-rocket feature-icon"></i>
                    <h3 class="feature-title">Gen Z Innovation</h3>
                    <p class="feature-desc">Designed with <span class="tech-highlight">simplicity and innovation</span> at its core. Clean interfaces, intuitive workflows, and modern design patterns that just make sense for today's digital-native workforce.</p>
                </div>
            </div>
        </div>
    </section>

   
    
</body>

      